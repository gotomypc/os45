<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>LECTURNITY WebPlayer - Control bar</title>
    <style type="text/css">
      body {
        margin:0px;
        padding:0px;
      }

      div.timeslider {
        position:absolute;
        left:155px;
        top:8px;
        width:398px;
        height:8px;
        background-image:url(images/timeslider_bg.png);
        background-repeat:no-repeat;
      }

      div.volumeslider {
        position:absolute;
        left:175px;
        top:21px;
        width:87px;
        height:8px;
        background-image:url(images/volumeslider_bg.png);
        background-repeat:no-repeat;
      }

      div.homeButton {
        position:absolute;
        left:0px;
        top:0px;
        width:33px;
        height:34px;
      }

      div.endButton {
        position:absolute;
        left:33px;
        top:0px;
        width:28px;
        height:34px;
      }

      div.backButton {
        position:absolute;
        left:61px;
        top:0px;
        width:28px;
        height:34px;
      }

      div.forwardButton {
        position:absolute;
        left:89px;
        top:0px;
        width:28px;
        height:34px;
      }

      div.playButton {
        position:absolute;
        left:117px;
        top:0px;
        width:34px;
        height:34px;
      }

      div.muteButton {
        position:absolute;
        left:153px;
        top:16px;
        width:22px;
        height:19px;
      }
   
      span.exitButton {
      }

      div.statusArea {
        position:absolute;
        left:273px;
        top:20px;
        width:165px;
        font-family:Arial,Helvetica,sans-serif;
        font-size:9px;
        font-weight:normal;
        text-align:center;
        color:#333333;
      }

      div.slidesArea
      {
        position:absolute;
        left:440px;
        top:20px;
        width:110px;
        text-align:center;
        font-family:Arial,Helvetica,sans-serif;
        font-size:9px;
        font-weight:normal;
        color:#333333;
      }

      table.logoTable
      {
        padding:0px;
        margin:0px;
        width:100%;
      }

      td.logoCell
      {
        margin:0px;
        text-align:right;
        padding-left:7px;
        padding-right:7px;
        vertical-align:middle;
        height:34px;
      }

      td.controlleft {
        fixed-width:true;
        width:561px;
        height:36px;
        background-image:url(images/controlbar_left.png);
        margin:0px;
        padding:0px;
        vertical-align:center;
      }

      td.controlmiddle {
        width:100%;
        height:36px;
        background-image:url(images/controlbar_bg.png);
        text-align:right;
        vertical-align:top;
      }

      td.controlright {
        width:141px;
        height:36px;
        padding:0px;
        margin:0px;
      }

      td.controlexit {
        width:28px;
        height:36px;
        padding:0px;
        margin:0px;
      }
    </style>

    <script src="js/browserlib.js" type="text/javascript"></script>
    <script src="js/evhandler.js" type="text/javascript"></script>
    <script src="js/lslider.js" type="text/javascript"></script>
    <script src="js/utils.js" type="text/javascript"></script>
    <script src="js/button.js" type="text/javascript"></script>
    <script src="js/controlbar.js" type="text/javascript"></script>

    <script type="text/javascript">
      <!--
      determineBrowser();
      //-->
    </script>
  </head>

  <body>
    <table cellpadding="0" cellspacing="0" style="padding:0px; margin: 0px; width:100%; height:36px;">
      <tr>
          <td class="controlleft">
            <img src="images/trans.gif" width="561" height="1" style="position:relative; left:0px; top:20px;">
            <div id="timeSliderDiv" class="timeslider"></div>
            <div id="volumeSliderDiv" class="volumeslider"></div>
            <div class="homeButton"><script type="text/javascript">button_outputButton('layouthome', 33, 34);</script></div>
            <div class="endButton"><script type="text/javascript">button_outputButton('layoutend', 28, 34);</script></div>
            <div class="backButton"><script type="text/javascript">button_outputButton('layoutback', 28, 34);</script></div>
            <div class="forwardButton"><script type="text/javascript">button_outputButton('layoutforward', 28, 34);</script></div>
            <div class="playButton"><script type="text/javascript">button_outputButton('layoutplay', 34, 34);</script></div>
            <div class="muteButton"><script type="text/javascript">button_outputButton('layoutmute', 22, 19);</script></div>
            <div id="statusAreaDiv" class="statusArea">0:00:00</div>
            <div id="slidesAreaDiv" class="slidesArea"></div>
          </td>
          <td class="controlmiddle"><table class="logoTable"><tr><td class="logoCell"><a href="%LogoImageUrl%" target="_blank">%LogoImage%</a></td></tr></table></td>
          <td class="controlright"><a href="%LecturnityLink%" target="_blank"><img src="images/controlbar_right.png" border="0"></a></td>
          <td class="controlexit"><script type="text/javascript">button_outputButton('exitbutton', 28, 36);</script></td>
        </tr>
    </table>
  </body>
</html>

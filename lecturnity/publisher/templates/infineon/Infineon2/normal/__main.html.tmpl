<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title>LECTURNITY WebPlayer %Version% - Slides</title>

    <link rel="stylesheet" href="slides.css">
    <link rel="stylesheet" href="style.css">

    <script src="js/slides.js" type="text/javascript"></script>
    <script src="js/variables.js" type="text/javascript"></script>
    <script src="js/utils.js" type="text/javascript"></script>
    <script src="js/layoutapi.js" type="text/javascript"></script>
    <script src="js/layout.js" type="text/javascript"></script>
    <script src="js/%ControlJavaScript%" type="text/javascript"></script>

    <script type="text/javascript">
      <!--
      determineBrowser();

      function main_init()
      {
        layout_onResize();
        slidesInit();
        controlInit();
      }
      // -->
    </script>

    <style type="text/css">
     div.titleArea {
        position:absolute;
        left:25px;
        top:134px;
        width:%PlayerWidth%px;
        height:40px;
      }
      
      div.stillImageArea {
        position:absolute;
        top:223px;
        left:25px;
        z-index:12;
        text-align:center;
      }

      div.masterPlayer {
        position:absolute;
        top:223px;
        left:25px;
        z-index:10;
        width:%PlayerWidth%px;
        text-align:center;
      }
    </style>
    
    <script type="text/javascript">
      <!--
      determineBrowser();

      function main_init()
      {
        layout_init();
        layout_onResize();
        slidesInit();
        controlInit();
      }
      // -->
    </script>
  </head>

  <body onResize="layout_onResize();" style="background-color:#010C58">

    <!-- border table -->
    <table id="BorderTable" border="0" cellpadding="0" cellspacing="0" style="padding:0px; margin:0px; width:100%; height:100%;">
      <tr>
        <td class="bordertopleft"><img src="images/trans.gif" width="25" height="1" alt="">
        </td>
        <td class="bordertoplogo"><img src="images/trans.gif" width="184" height="1" alt="">
        </td>
        <td class="bordertop"><img src="images/trans.gif" width="1" height="1" alt="">
        </td>
        <td class="bordertoptheme"><img src="images/trans.gif" width="603" height="1" alt="">
        </td>
        <td class="bordertopright"><img src="images/trans.gif" width="25" height="1" alt="">
        </td>
      </tr>
      <tr>
        <td class="borderleft"><img src="images/trans.gif" width="25" height="1" alt="">
        </td>
        <td class="bordermiddle" colspan="3" style="padding:0px; margin:0px; vertical-align:top; text-align:left;">
        
          <!-- inner area -->
          <table id="InnerTable" border="0" cellpadding="0" cellspacing="0" style="padding:0px; margin:0px; width:100%; height:100%;">
            <tr>
              <td>
          
                <div id="overviewTab" class="overviewTab" onClick="layout_displayOverview();"><p class="overviewTabText">%TabOverview%</p></div>
                <div id="infoTab" class="infoTab" onClick="layout_displayInfo();"><p class="infoTabText">%TabInfo%</p></div>

                <div id="containerDiv" class="containerArea"></div>
                <iframe name="infoFrame" id="infoFrame" src="__info.html" width="%PlayerWidth%" height="300" frameborder="0" style="position: absolute; left: 24px; top: 238px; border-style:solid; border-width:1px; border-color:#FFFFFF; visibility:visible; z-index:9;"></iframe>
                <iframe name="thumbsFrame" id="thumbsFrame" src="__thumbs.html" width="%PlayerWidth%" height="300" frameborder="0" style="position: absolute; left: 24px; top: 238px; border-style:solid; border-width:1px; border-color:#FFFFFF; visibility:visible; z-index:10;"></iframe>

                <div id="titleDiv" class="titleArea">
                  <table border="0" cellpadding="0" cellspacing="0" style="margin:0px;">
                      <tr>
                        <td class="title">%Title%</td>
                      </tr>
                      <tr>
                        <td class="subtitle">%Author%</td>
                      </tr>
                      <tr>
                        <td class="subtitle">%RecordDate%</td>
                      </tr>
                  </table>
                </div>

                <div id="stillImageDiv" class="stillImageArea">%StillImage%</div>
                <div id="playerDiv" class="playerArea"></div>
                <div id="masterPlayerDiv" class="masterPlayer">
%MasterPlayer%
                </div>

              </td>
            </tr>
          </table>

        <!-- border table (cont.) -->
        </td>
        <td class="borderright"><img src="images/trans.gif" width="25" height="1" alt="">
        </td>
      </tr>
      <tr>
        <td class="borderbottomleft"><img src="images/trans.gif" width="25" height="1" alt="">
        </td>
        <td class="borderbottom" colspan="3"><img src="images/trans.gif" width="100" height="1" alt="">
        </td>
        <td class="borderbottomright"><img src="images/trans.gif" width="25" height="1" alt="">
        </td>
      </tr>
    </table>

%Slides%

  </body>
</html>
